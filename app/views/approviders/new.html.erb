<% provide(:title, 'Create your profile') %>
<h1>SCCA Advanced Practice Provider Profile Form</h1>


<div class="row">
  
  <div class="span8 form-horizontal">
    <%= form_for(@approvider) do |f| %>

       <%= render 'shared/error_messages' %>

       <div class="control-group">
    	<%= f.label :first_name %>
        <div class="controls">
    	<%= f.text_field :first_name %>
        </div>
        </div>

        <div class="control-group">
    	<%= f.label :last_name %>
        <div class="controls">
    	<%= f.text_field :last_name %>
        </div>
        </div>


        <div class="control-group">
    	<%= f.label :name_appears, "Your name as you would like it to appear" %>
        <div class="controls">
    	<%= f.text_field  :name_appears %>
        </div>
        </div>

    	<div class="control-group">
        <%= f.label :title %>
        <div class="controls">
    	<%= f.text_field :title %>   	
        </div>
        </div>

    	<div class="control-group">
        <%= f.label :philosophy %>
        <div class="controls">
    	<%= f.text_area(:philosophy, size: "20x4")  %>
        </div>
        </div>

       
       <div class="form-actions">
    	<%= f.submit "Create profile", class: "btn btn-large btn-primary" %>
       </div>
    <% end %>
  </div>
 
 </div>