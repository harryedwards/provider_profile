<% provide(:title, 'Edit your profile') %>
<h1>Update your provider profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@approvider) do |f| %>
       <%= render 'shared/error_messages' %>

    	<%= f.label :first_name %>
    	<%= f.text_field :first_name %>

    	<%= f.label :last_name %>
    	<%= f.text_field :last_name %>

    	<%= f.label :name_appears, "Your name as you would like it to appear" %>
    	<%= f.text_field  :name_appears %>

    	<%= f.label :title %>
    	<%= f.text_field :title %>   	

    	<%= f.label :philosophy %>
    	<%= f.text_field :philosophy %>
       <br/>
    	<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
 </div>